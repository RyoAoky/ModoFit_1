# Variables de entorno para ModoFit
# Copiar este archivo como .env y configurar los valores

# Configuración general
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Configuración de seguridad
SESSION_SECRET=cambiar_por_un_string_aleatorio_y_seguro
COOKIE_SECRET=cambiar_por_un_string_aleatorio_y_seguro

# Configuración de base de datos
DB_HOST=localhost
DB_USER=usuario_db
DB_PASSWORD=contraseña_segura
DB_NAME=modofit
DB_PORT=1433

# Configuración de logging
LOG_LEVEL=info

# Duración de sesión y tokens
SESSION_EXPIRY=86400000 # 24 horas en milisegundos
CSRF_MAX_AGE=86400000 # 24 horas en milisegundos

# Otros ajustes
RATE_LIMIT_WINDOW=900000 # 15 minutos
RATE_LIMIT_MAX=100 # 100 solicitudes en la ventana de tiempo
