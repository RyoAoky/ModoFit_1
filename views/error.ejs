<div class="text-center bg-white p-8 rounded-lg shadow-md">
    <div class="text-6xl text-red-500 mb-4">
        <i class="fas fa-exclamation-circle"></i>
    </div>
    <h1 class="text-2xl font-bold text-secondary mb-4"><%= title %></h1>
    <p class="text-gray-600 mb-6"><%= message %></p>
    <% if (error && Object.keys(error).length > 0) { %>
        <div class="text-left bg-gray-100 p-4 rounded-lg mb-6 overflow-auto max-h-40">
            <pre class="text-xs text-gray-700"><%= JSON.stringify(error, null, 2) %></pre>
        </div>
    <% } %>
    <a href="/" class="bg-primary hover:bg-yellow-400 text-secondary font-bold py-2 px-6 rounded-full transition duration-300 inline-block">
        Volver al inicio
    </a>
</div>