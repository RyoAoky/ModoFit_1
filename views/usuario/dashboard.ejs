<!-- Dashboard Content -->
<div>
    <!-- Cabecera de página con estadísticas resumidas -->
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Dashboard</h1>
            <p class="mt-1 text-sm text-gray-600">Bienvenido de nuevo, <%= user.Nombre %>. Aquí está el resumen de tu actividad.</p>
        </div>
        <div class="mt-4 lg:mt-0 flex flex-wrap gap-3">
            <div class="bg-white shadow rounded-lg p-3 flex items-center"> 
                <div class="p-2 rounded-full bg-primary bg-opacity-20 text-primary mr-3">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500">Visitas Gym</p>
                    <p class="text-lg font-semibold"><%= dashboardData.vecesGym %></p>
                </div>
            </div>
            <div class="bg-white shadow rounded-lg p-3 flex items-center">
                <div class="p-2 rounded-full bg-green-100 text-green-600 mr-3">
                    <i class="fas fa-medal"></i>
                </div>
                <div>
                    <p class="text-xs text-gray-500">Beneficios Usados</p>
                    <p class="text-lg font-semibold"><%= dashboardData.beneficiosUsados.sillonMasaje + dashboardData.beneficiosUsados.congeloMembresia + dashboardData.beneficiosUsados.compartioMembresia %></p>
                </div>
            </div>
        </div>
    </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <!-- Tarjeta: Asistencia al Gimnasio -->
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-primary text-white mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-700">Asistencia al Gimnasio</h3>
                </div>
                <p class="text-gray-600 text-lg">Has visitado el gimnasio <span class="font-bold text-primary"><%= dashboardData.vecesGym %></span> veces.</p>
                <div class="mt-4">
                    <h4 class="text-md font-medium text-gray-600 mb-2">Días de Asistencia Recientes:</h4>
                    <% if (dashboardData.diasFue && dashboardData.diasFue.length > 0) { %>
                        <ul class="list-disc list-inside text-gray-500 text-sm space-y-1">
                            <% dashboardData.diasFue.slice(0, 5).forEach(function(dia) { %> <!-- Muestra los últimos 5 -->
                                <li><%= new Date(dia).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %></li>
                            <% }); %>
                        </ul>
                        <% if (dashboardData.diasFue.length > 5) { %>
                            <p class="text-xs text-gray-400 mt-1">... y <%= dashboardData.diasFue.length - 5 %> más.</p>
                        <% } %>
                    <% } else { %>
                        <p class="text-sm text-gray-500">Aún no hay registros de asistencia.</p>
                    <% } %>
                </div>
            </div>

            <!-- Tarjeta: Uso de Beneficios -->
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-green-500 text-white mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-700">Uso de Beneficios</h3>
                </div>
                <ul class="space-y-2 text-gray-600">
                    <li>Sillón de masaje: <span class="font-bold text-green-600"><%= dashboardData.beneficiosUsados.sillonMasaje %></span> veces</li>
                    <li>Membresía congelada: <span class="font-bold text-green-600"><%= dashboardData.beneficiosUsados.congeloMembresia %></span> veces</li>
                    <li>Membresía compartida: <span class="font-bold text-green-600"><%= dashboardData.beneficiosUsados.compartioMembresia %></span> veces</li>
                </ul>
            </div>
            
            <!-- Tarjeta: Navegación Rápida -->
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-indigo-500 text-white mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-700">Acciones Rápidas</h3>
                </div>
                <div class="space-y-3">
                    <a href="/usuario/billing" class="block w-full text-center bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-150 ease-in-out">
                        Ver mi Facturación
                    </a>
                    <a href="/#planes" class="block w-full text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg transition duration-150 ease-in-out">
                        Explorar Planes
                    </a>
                    <!-- Puedes añadir más enlaces rápidos aquí -->
                </div>
            </div>

        </div>

        <!-- Sección Adicional: Próximas Clases o Eventos -->
        <div class="mt-10 bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Próximas Actividades</h3>
                <a href="#" class="text-primary hover:text-secondary text-sm font-medium">Ver todas</a>
            </div>
            
            <div class="space-y-4">
                <!-- Item de actividad 1 -->
                <div class="flex items-start p-3 border border-gray-100 rounded-lg hover:shadow-md transition-shadow">
                    <div class="bg-primary text-gray-800 rounded-md p-3 text-center mr-4 flex-shrink-0 w-16">
                        <span class="block text-lg font-bold">24</span>
                        <span class="block text-xs">Mayo</span>
                    </div>
                    <div>
                        <h4 class="font-medium text-gray-800">Yoga Avanzado</h4>
                        <p class="text-sm text-gray-500 mt-1"><i class="far fa-clock mr-1"></i> 18:00 - 19:30 hs</p>
                        <p class="text-sm text-gray-500"><i class="fas fa-map-marker-alt mr-1"></i> Salón Zen, 2do Piso</p>
                        <div class="mt-2">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Confirmada</span>
                        </div>
                    </div>
                </div>
                
                <!-- Item de actividad 2 -->
                <div class="flex items-start p-3 border border-gray-100 rounded-lg hover:shadow-md transition-shadow">
                    <div class="bg-gray-200 text-gray-800 rounded-md p-3 text-center mr-4 flex-shrink-0 w-16">
                        <span class="block text-lg font-bold">26</span>
                        <span class="block text-xs">Mayo</span>
                    </div>
                    <div>
                        <h4 class="font-medium text-gray-800">Functional Training</h4>
                        <p class="text-sm text-gray-500 mt-1"><i class="far fa-clock mr-1"></i> 10:00 - 11:00 hs</p>
                        <p class="text-sm text-gray-500"><i class="fas fa-map-marker-alt mr-1"></i> Zona Crossfit</p>
                        <div class="mt-2">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Pendiente</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de progreso -->        
        <div class="mt-10 bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-xl font-semibold text-gray-700">Tu progreso este mes</h3>
                <div class="flex items-center">
                    <span class="text-sm text-gray-500 mr-3">Comparado con: </span>
                    <select class="text-sm border-gray-300 rounded-md focus:ring-primary focus:border-primary">
                        <option>Mes anterior</option>
                        <option>Hace 3 meses</option>
                        <option>Hace 6 meses</option>
                    </select>
                </div>
            </div>
            
            <div class="h-64">
                <!-- Aquí se insertaría el gráfico con Chart.js. Código de ejemplo: -->
                <canvas id="progressChart"></canvas>
            </div>
        </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Inicializar el gráfico de progreso si existe el canvas
        const progressChart = document.getElementById('progressChart');
        if (progressChart) {
            new Chart(progressChart, {
                type: 'line',
                data: {
                    labels: ['Semana 1', 'Semana 2', 'Semana 3', 'Semana 4'],
                    datasets: [{
                        label: 'Visitas',
                        data: [5, 7, 4, 8],
                        borderColor: '#FFCC29',
                        borderWidth: 2,
                        fill: false,
                        tension: 0.4
                    }, {
                        label: 'Duración promedio (min)',
                        data: [60, 75, 65, 90],
                        borderColor: '#4F46E5',
                        borderWidth: 2,
                        fill: false,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    });
</script>
