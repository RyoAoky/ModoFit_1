<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#FFCC29',
                        secondary: '#606062',
                        accent: '#4F46E5', // Color para acento en dashboard
                        success: '#10B981', // Verde para éxitos
                        warning: '#F59E0B', // Amarillo para advertencias
                        danger: '#EF4444', // Rojo para errores
                        info: '#3B82F6' // Azul para información
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-10px)' },
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Alpine.js -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    
    <!-- CSRF Token -->
    <% if (typeof csrfToken !== 'undefined') { %>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <% } else { %>
    <meta name="csrf-token" content="">
    <% } %>
</head>
<body class="font-sans bg-gray-50">
    <!-- Flash Messages -->
    <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="fixed top-4 right-4 z-50 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded shadow-lg" id="successMessage">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm"><%= success_msg %></p>
                </div>
                <div class="ml-auto pl-3">
                    <div class="-mx-1.5 -my-1.5">
                        <button type="button" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-200 focus:outline-none" onclick="document.getElementById('successMessage').remove()">
                            <span class="sr-only">Dismiss</span>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            setTimeout(function() {
                const msg = document.getElementById('successMessage');
                if (msg) msg.remove();
            }, 5000);
        </script>
    <% } %>
    
    <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="fixed top-4 right-4 z-50 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded shadow-lg" id="errorMessage">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm"><%= error_msg %></p>
                </div>
                <div class="ml-auto pl-3">
                    <div class="-mx-1.5 -my-1.5">
                        <button type="button" class="inline-flex rounded-md p-1.5 text-red-500 hover:bg-red-200 focus:outline-none" onclick="document.getElementById('errorMessage').remove()">
                            <span class="sr-only">Dismiss</span>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            setTimeout(function() {
                const msg = document.getElementById('errorMessage');
                if (msg) msg.remove();
            }, 5000);
        </script>
    <% } %>
    
    <!-- Dashboard Layout -->
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="bg-white shadow-lg w-64 h-full flex-shrink-0 fixed left-0 overflow-y-auto z-30 transition-all duration-300" id="sidebar">
            <div class="p-4 border-b flex justify-between items-center">
                <a href="/" class="flex items-center">
                    <img src="/img/logo.webp" alt="ModoFit Logo" class="h-8 w-auto">
                    <span class="ml-2 font-bold text-lg text-secondary">ModoFit</span>
                </a>
                <button id="closeSidebar" class="lg:hidden text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <nav class="p-4">
                <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Dashboard</p>
                <ul class="space-y-1">
                    <li>
                        <a href="/usuario/dashboard" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 <%= currentPage === 'usuarioDashboard' ? 'bg-primary bg-opacity-10 text-primary font-medium' : '' %>">
                            <i class="fas fa-home mr-3"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a href="/usuario/billing" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 <%= currentPage === 'usuarioBilling' ? 'bg-primary bg-opacity-10 text-primary font-medium' : '' %>">
                            <i class="fas fa-credit-card mr-3"></i>
                            <span>Facturación</span>
                        </a>
                    </li>
                    <li>
                        <a href="/usuario/clases" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-calendar mr-3"></i>
                            <span>Clases</span>
                        </a>
                    </li>
                    <li>
                        <a href="/usuario/progreso" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-chart-line mr-3"></i>
                            <span>Mi Progreso</span>
                        </a>
                    </li>
                </ul>
                
                <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider my-3 mt-6">Servicios</p>
                <ul class="space-y-1">
                    <li>
                        <a href="/usuario/benefit/sillon" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-couch mr-3"></i>
                            <span>Reservar Sillón</span>
                        </a>
                    </li>
                    <li>
                        <a href="/usuario/benefit/congelar" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-snowflake mr-3"></i>
                            <span>Congelar Membresía</span>
                        </a>
                    </li>
                    <li>
                        <a href="/usuario/benefit/amigo" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-user-plus mr-3"></i>
                            <span>Invitar Amigo</span>
                        </a>
                    </li>
                </ul>
                
                <div class="pt-6 mt-6 border-t">
                    <a href="/usuario/profile" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-user-circle mr-3"></i>
                        <span>Mi Perfil</span>
                    </a>
                    <a href="/usuario/logout" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-red-100 hover:text-red-500">
                        <i class="fas fa-sign-out-alt mr-3"></i>
                        <span>Cerrar Sesión</span>
                    </a>
                </div>
            </nav>
        </aside>
        
        <!-- Main Content Area -->
        <div class="lg:ml-64 w-full">
            <!-- Top Navigation Bar -->
            <header class="bg-white shadow-sm sticky top-0 z-20">
                <div class="px-4 sm:px-6 lg:px-8 flex h-16 items-center justify-between">
                    <!-- Mobile Menu Button -->
                    <button id="openSidebar" class="lg:hidden text-gray-500 hover:text-gray-700">
                        <i class="fas fa-bars text-lg"></i>
                    </button>
                    
                    <!-- Search Bar -->
                    <div class="hidden md:block flex-1 max-w-lg ml-8">
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-search text-gray-400"></i>
                            </div>
                            <input type="text" class="block w-full rounded-lg border-gray-300 bg-gray-100 pl-10 pr-3 py-2 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:bg-white" placeholder="Buscar...">
                        </div>
                    </div>
                    
                    <!-- Right side navbar items -->
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-bell text-lg"></i>
                        </button>
                        <div class="hidden sm:flex items-center">
                            <span class="text-sm text-gray-700 mr-2">Hola, <%= user.Nombre || 'Usuario' %></span>
                            <div class="h-8 w-8 rounded-full bg-primary text-secondary flex items-center justify-center font-bold">
                                <%= (user.Nombre ? user.Nombre.charAt(0) : 'U').toUpperCase() %><%= (user.Apellido ? user.Apellido.charAt(0) : '').toUpperCase() %>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Main Content -->
            <main class="p-4 sm:p-6 lg:p-8">
                <%- body %>
            </main>
            
            <!-- Footer -->
            <footer class="bg-white border-t mt-auto py-4">
                <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
                    <p>&copy; <%= new Date().getFullYear() %> ModoFit. Todos los derechos reservados.</p>
                </div>
            </footer>
        </div>
    </div>
    
    <!-- Main JavaScript -->
    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const openSidebarBtn = document.getElementById('openSidebar');
            const closeSidebarBtn = document.getElementById('closeSidebar');
            
            openSidebarBtn.addEventListener('click', function() {
                sidebar.classList.remove('-translate-x-full');
                sidebar.classList.add('translate-x-0');
            });
            
            closeSidebarBtn.addEventListener('click', function() {
                sidebar.classList.remove('translate-x-0');
                sidebar.classList.add('-translate-x-full');
            });
            
            // Hide sidebar on small screens by default
            function handleResize() {
                if (window.innerWidth < 1024) { // lg breakpoint
                    sidebar.classList.add('-translate-x-full');
                    sidebar.classList.remove('translate-x-0');
                } else {
                    sidebar.classList.remove('-translate-x-full');
                    sidebar.classList.add('translate-x-0');
                }
            }
            
            // Initial call and add resize listener
            handleResize();
            window.addEventListener('resize', handleResize);
        });
    </script>
    
    <!-- Page-specific JavaScript -->
    <% if (currentPage) { %>
        <script src="/js/pages/<%= currentPage %>.js"></script>
    <% } %>
</body>
</html>
